# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                      controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                          controllers.Assets.at(path="/public", file)

#用户
POST        /user/add                              controllers.systemmanage.User.add

POST        /user/delete/:id                       controllers.systemmanage.User.remove(id:Long)

POST        /user/update                           controllers.systemmanage.User.update

GET         /user/:id                              controllers.systemmanage.User.get(id:Long)

GET         /user/list/:pageno/:limit              controllers.systemmanage.User.list(pageno:Int,limit:Int)

#机构
POST        /department/add                        controllers.systemmanage.Department.add

POST        /department/delete/:id                 controllers.systemmanage.Department.remove(id:Long)

POST        /department/update                     controllers.systemmanage.Department.update

GET         /department/:id                        controllers.systemmanage.Department.get(id:Long)

GET         /department/list/:pageno/:limit        controllers.systemmanage.Department.list(pageno:Int,limit:Int)

#菜单
POST        /menu/add                              controllers.systemmanage.Menu.add

POST        /menu/delete/:id                       controllers.systemmanage.Menu.remove(id:Long)

POST        /menu/update                           controllers.systemmanage.Menu.update

GET         /menu/:id                              controllers.systemmanage.Menu.get(id:Long)

GET         /menu/list                             controllers.systemmanage.Menu.list
GET         /menu/userMenuNode                     controllers.systemmanage.Menu.userMenuNode
#角色
POST        /role/add                              controllers.systemmanage.Role.add

POST        /role/delete/:id                       controllers.systemmanage.Role.remove(id:Long)

POST        /role/update                           controllers.systemmanage.Role.update

GET         /role/:id                              controllers.systemmanage.Role.get(id:Long)

GET         /role/list                             controllers.systemmanage.Role.list

#系统
POST        /system/add                            controllers.systemmanage.System.add

POST        /system/delete/:id                     controllers.systemmanage.System.remove(id:String)

POST        /system/update                         controllers.systemmanage.System.update

GET         /system/:id                            controllers.systemmanage.System.get(id:String)

GET         /system/list                           controllers.systemmanage.System.list

GET         /system/userSystemNode                 controllers.systemmanage.System.userSystemNode

#登录
POST        /login                                 controllers.systemmanage.Login.login

GET         /heartCheck                            controllers.systemmanage.Login.heartCheck

POST        /logout                                controllers.systemmanage.Login.logout

