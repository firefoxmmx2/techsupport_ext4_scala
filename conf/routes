# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                   controllers.Application.index
# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                       controllers.Assets.at(path="/public", file)
#用户
POST          /api/users.json                     controllers.systemmanage.User.add
DELETE        /api/users/:id.json                 controllers.systemmanage.User.remove(id:Long)
PUT           /api/users/:id.json                 controllers.systemmanage.User.update(id:Long)
GET           /api/users/:id.json                 controllers.systemmanage.User.get(id:Long)
GET           /api/users.json                     controllers.systemmanage.User.list

#机构
POST          /api/departments.json               controllers.systemmanage.Department.add
DELETE        /api/departments/:id.json           controllers.systemmanage.Department.remove(id:Long)
POST          /api/departments/:id.json           controllers.systemmanage.Department.update(id:Long)
GET           /api/departments/:id.json           controllers.systemmanage.Department.get(id:Long)
GET           /api/departments.json               controllers.systemmanage.Department.list

#菜单
POST          /api/menus.json                     controllers.systemmanage.Menu.add
DELETE        /api/menus/:id.json                 controllers.systemmanage.Menu.remove(id:Long)
PUT           /api/menus/:id.json                 controllers.systemmanage.Menu.update(id:Long)
GET           /api/menus/:id.json                 controllers.systemmanage.Menu.get(id:Long)
GET           /api/menus.json                     controllers.systemmanage.Menu.list
GET           /api/menus/userMenuNode.json        controllers.systemmanage.Menu.userMenuNode
#角色
POST          /api/roles.json                     controllers.systemmanage.Role.add
DELETE        /api/roles/:id.json                 controllers.systemmanage.Role.remove(id:Long)
PUT           /api/roles/:id.json                 controllers.systemmanage.Role.update
GET           /api/roles/:id.json                 controllers.systemmanage.Role.get(id:Long)
GET           /api/roles.json                     controllers.systemmanage.Role.list
#系统
POST          /api/system/add                     controllers.systemmanage.System.add
POST          /api/system/delete/:id              controllers.systemmanage.System.remove(id:String)
POST          /api/system/update                  controllers.systemmanage.System.update
GET           /api/system/:id                     controllers.systemmanage.System.get(id:String)
GET           /api/system/list                    controllers.systemmanage.System.list
GET           /api/system/userSystemNode          controllers.systemmanage.System.userSystemNode
#登录
POST          /login                              controllers.systemmanage.Login.login
GET           /heartCheck                         controllers.systemmanage.Login.heartCheck
POST          /logout                             controllers.systemmanage.Login.logout

